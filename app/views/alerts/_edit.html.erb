<!-- Modal -->
<div class="modal fade" id="edit_alert_<%= alert.id %>" tabindex="-1" role="dialog" aria-labelledby="editAlertLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">

     <div class="container mb-4">
      <div class="row justify-content-center modal-alert">

          <h2>Edit Alert</h2>
      <%= simple_form_for alert, method: :patch do |f| %>

        <div class="form-inputs">
          <%= f.input :name %>
          <%= f.input :description, as: :text %>
          <%= f.input :area_id, collection: Area.order(:name) %>
          <%= f.input :institution_id, collection: Institution.order(:name) %>
          <%= f.submit%>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>
</div>

