<!-- Modal -->
<div class="modal fade" id="newAlert" tabindex="-1" role="dialog" aria-labelledby="newAlertLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">

     <div class="container mb-4">
      <div class="row justify-content-center modal-alert">


          <div class="form-inputs">
          <h3>New Alert</h3>
          <%= simple_form_for alert do |f| %>
            <%= f.input :name %>
            <%= f.input :description, as: :text %>
            <%= f.input :area_id, collection: Area.order(:name) %>
            <%= f.input :institution_id, collection: Institution.order(:name) %>
            <%= f.button :submit, "Submit", class: "btn btn-warning"%>
          <% end %>
          </div>

      </div>
    </div>
  </div>
</div>
</div>
